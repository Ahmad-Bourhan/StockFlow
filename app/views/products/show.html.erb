<p class="text-success"><%= notice %></p>

<%= render @product %>

<div class="mt-3">
  <!-- Modify Product Link -->
  <%= link_to "Modify Product", edit_product_path(@product), class: "btn btn-primary" %> |
  <!-- Product List Link -->
  <%= link_to "Product List", products_path, class: "btn btn-secondary" %>

  <!-- Delete Product Button -->
  <%= button_to "Delete Product", @product, method: :delete, class: "btn btn-danger ms-2", data: { confirm: "Are you sure you want to delete this product?" } %>
</div>
